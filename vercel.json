{
    "installCommand": "pnpm install",
    "functions": {
        "api/*.ts": {
            "memory": 1024,
            "maxDuration": 10
        },
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ]
}